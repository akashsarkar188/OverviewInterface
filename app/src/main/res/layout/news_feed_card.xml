<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_grey_background"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rectangle_grey_background"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_grey_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/action1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/rectangle_grey_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:layout_toEndOf="@id/action1"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:textColor="#353535"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginStart="10dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/action1"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:background="@color/light_grey"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/action2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/rectangle_grey_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:layout_toEndOf="@id/action2"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:textColor="#353535"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginStart="10dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/action2"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:background="@color/light_grey"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/action3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/rectangle_grey_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:layout_toEndOf="@id/action3"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:textColor="#353535"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginStart="10dp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>